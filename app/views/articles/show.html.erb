<meta name="viewport" content="width=device-width">
<body id="article">
<div class="article">
  <h1 class="title">
    <%= @article.title %>
  </h1>
  <h1 class="quote" id="start">"</h1>
  <p>
    <%= @article.text %>
  </p>
  <h1 class="quote" id="end">"</h1>
</div>
<h6>Add a comment</h6>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :body %>
    <%= f.text_field :body %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> | 
<%= link_to 'Back', articles_path %>
</body>
