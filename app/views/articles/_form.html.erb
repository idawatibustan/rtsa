<%= form_for @article do |f| %>

  <% if @article.errors.any? %>
    <div id="error_msg">
      <p>
        Unable to save article, check <%= pluralize(@article.errors.count, "error") %> errors below:
      </p>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %><br>
  </p>

<% end %>
